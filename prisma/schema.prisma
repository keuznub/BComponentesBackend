generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @unique @default(autoincrement())
  username String @unique
  password String
  email String @unique
  role String?
  image String? 
  orders Order[]
  rates Rate[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
}

model Product{
  id Int @id @unique @default(autoincrement())
  name String
  description String?
  image String
  price Float
  discount Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  categoryProduct CategoryProduct[]
  orderProducts OrderProduct[]
  rates Rate[]
}

model Order{
  id Int @id @unique @default(autoincrement())
  idUser Int 
  user User @relation(fields: [idUser],references: [id])
  status String
  orderProducts OrderProduct[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model OrderProduct{
  idProduct Int
  product Product @relation(fields: [idProduct], references: [id], onDelete: Cascade)
  idOrder Int
  order Order @relation(fields: [idOrder],references: [id], onDelete: Cascade)
  quantity Int
  @@id([idProduct,idOrder])

}

model Category{
  id Int @id @unique @default(autoincrement())
  name String 
  color String?
  categoryProduct CategoryProduct[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CategoryProduct{
  idProduct Int
  product Product @relation(fields: [idProduct], references: [id], onDelete: Cascade)
  idCategory Int
  category Category @relation(fields: [idCategory], references: [id], onDelete: Cascade)
  @@id([idProduct,idCategory])
}

model Rate{
  idUser Int
  user User @relation(fields: [idUser], references: [id])
  idProduct Int
  product Product @relation(fields: [idProduct], references: [id])
  opinion String?
  value Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@id([idUser,idProduct])
}



